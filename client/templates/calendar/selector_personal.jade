template(name="selectorPersonal")
    #itemsSelectors.itemsSelectors.row-fluid
        .span12
            form.form-inline
                .controls
                    label.control-label(for='startDate') 开始日期：
                    .input-group
                        input.form-control.datepicker(type="text", name="startDate", value="#{startDate}")
                    select(name="weeks").form-control
                        option(value="1")
                            |显示1周
                        option(value="6")
                            |显示6周
                        option(value="8")
                            |显示8周
                        option(value="12")
                            |显示12周
                    label.control-label ｜
                    label.control-label(for="subjects") 筛选：
                    label.checkbox-inline
                        input(type="checkbox", name="subjects", value="", checked="")
                        |提醒
                    label.checkbox-inline
                        input(type="checkbox", name="subjects", value="", checked="")
                        |TODO
                    label.checkbox-inline
                        input(type="checkbox", name="subjects", value="", checked="")
                        |事件
                //- .controls
                    label.control-label(for="eventTypes") 分类：
                    each eventTypes
                        label.checkbox-inline
                            input(type="checkbox", name="eventTypes", value="#{t}", checked="")
                            |#{n}
                //- .controls
                    
                .controls
                    label.control-label(for="viewCompleted") 已完成的任务：
                    label.radio-inline
                        input(type="radio", name="viewCompleted", value="0", checked="checked") 
                        |不显示
                    label.radio-inline
                        input(type="radio", name="viewCompleted", value="1") 
                        |显示
